<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/check_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left|center">

<!--  <com.google.android.material.checkbox.MaterialCheckBox-->
<!--      android:id="@+id/checkbox_yr"-->
<!--      android:layout_width="wrap_content"-->
<!--      android:layout_height="wrap_content"-->
<!--      android:text=""/>-->

  <ImageView
      android:id="@+id/blank_checkbox"
      android:layout_width="36dp"
      android:layout_height="36dp"
      android:visibility="visible"
      android:src="@drawable/ic_blank_checkbox_img"
      android:padding="7dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      app:tint="@color/textDark" />

  <ImageView
      android:id="@+id/tick_checkbox"
      android:layout_width="36dp"
      android:layout_height="36dp"
      android:visibility="gone"
      android:src="@drawable/ic_tick_checkbox_img"
      android:padding="7dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      app:tint="@color/green" />


    <TextView
        android:id="@+id/year_textV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:layout_gravity="center"
        android:text="2018"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

</LinearLayout>