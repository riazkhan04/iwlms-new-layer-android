<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
    android:id="@+id/top_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:gravity="center"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.6"
        android:text="Human Kill"/>

    <!-- Remark type spinner start-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/other_til"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1.7"
        android:visibility="invisible"
        android:background="@drawable/editrectangle"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:hint="Name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/other_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTint="@color/textDark"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:inputType="text"
            android:textSize="13sp"
            android:paddingRight="5dp"
            android:layout_gravity="center"
            android:paddingLeft="5dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Remark type spinner start-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/death_til"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/editrectangle"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:hint="Death">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/death_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTint="@color/textDark"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:maxLength="7"
            android:digits="0123456789"
            android:textSize="13sp"
            android:paddingRight="5dp"
            android:layout_gravity="center"
            android:paddingLeft="5dp"/>
     </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_casualty_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_casaulty_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Add Animal Casualty"/>

        <EditText
            android:id="@+id/noOf_casualty"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:hint="Number"
            android:gravity="center"
            android:textSize="12sp"
            android:background="@drawable/editrectangle"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_add_circle"
            android:tint="@color/light_grey"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/multiple_add_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

        <!-- Remark type spinner start-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/desc_ll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:background="@drawable/editrectangle"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint="Description">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/desc_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTint="@color/textDark"
                android:background="@android:color/transparent"
                android:singleLine="true"
                android:inputType="text"
                android:textSize="13sp"
                android:paddingRight="5dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Remark type spinner start-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/value_til"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/editrectangle"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:hint="Death">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/value_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTint="@color/textDark"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:maxLength="7"
                android:digits="0123456789"
                android:textSize="13sp"
                android:paddingRight="5dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/cancel_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cancel"
            android:padding="3dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/multiple_add_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

        <!-- Remark type spinner start-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/desc_ll1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:background="@drawable/editrectangle"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint="Description">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/desc_txt1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTint="@color/textDark"
                android:background="@android:color/transparent"
                android:singleLine="true"
                android:inputType="text"
                android:textSize="13sp"
                android:paddingRight="5dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Remark type spinner start-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/value_til1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/editrectangle"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:hint="Death">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/value_txt1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTint="@color/textDark"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:maxLength="7"
                android:digits="0123456789"
                android:textSize="13sp"
                android:paddingRight="5dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/cancel_img1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cancel"
            android:padding="3dp"/>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/add_recyclerV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


    </LinearLayout>