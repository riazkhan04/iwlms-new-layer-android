<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_dialog_ll"
    android:paddingBottom="20dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Select Incident to view"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/gradient_bg"/>

    <ImageView
        android:id="@+id/close_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_cancel"
        app:tint="@color/white" />

    <LinearLayout
        android:id="@+id/select_incident_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/title"
        android:orientation="vertical">

        <TextView
            android:id="@+id/elephant_on_road_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="Elephant on Road"/>

        <TextView
            android:id="@+id/elephant_on_pit_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="Elephant Found In Pit/Dump"/>

        <TextView
            android:id="@+id/elephant_injured_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="Elephant Injured/Sick"/>

        <TextView
            android:id="@+id/house_damage_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="House Damage"/>

        <TextView
            android:id="@+id/human_injured_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="Human Injury/Kill"/>

        <TextView
            android:id="@+id/crop_damage_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="Crop Damage"/>
        <TextView
            android:id="@+id/other_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="Other"/>


    </LinearLayout>


    <Button
        android:id="@+id/done_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@color/textDark"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/select_incident_LL"
        android:background="@drawable/btn_round_bg"/>





</RelativeLayout>