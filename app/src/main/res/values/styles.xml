<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyTheme" parent="Theme.AppCompat.Dialog">
        <item name="alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">#0e0e0e</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#0b0b0b</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">70dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">#9b9c97</item>
    </style>
    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>
    <style name="Theme.MyApp" parent="Theme.MaterialComponents"/>

    <style name="SlidingDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_to_top_anim</item>
        <item name="android:windowExitAnimation">@anim/top_to_bottom_anim</item>
        <!--<item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>-->
        <!--<item name="android:windowExitAnimation">@android:anim/slide_out_right</item>-->
    </style>
    <style name="SlidingLeftDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

<!--    <style name="SplashViewTheme" parent="Theme.AppCompat.NoActionBar">-->
    <style name="SplashViewTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
<!--        <item name="android:windowBackground">@null</item>-->
<!--        <item name="android:windowDisablePreview">true</item>-->
<!--        <item name="android:windowIsTranslucent">true</item>-->

    </style>

    <style name="AlertDialogCustom" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorPrimary</item>
<!--        <item name="android:typeface">monospace</item>-->
    </style>
    <style name="myEditText" parent="@style/ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">@android:drawable/editbox_background_normal</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
        <item name="android:height">40sp</item>
    </style>

    <style name="MyAppTheme" parent="Theme.Design.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimary</item>
    <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="colorPrimary">@color/lightest_green</item>

    </style>

</resources>
